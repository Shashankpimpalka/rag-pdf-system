cat > .env << 'EOF'
# Application
APP_NAME="RAG PDF System"
APP_VERSION="1.0.0"
DEBUG=True

# Ollama
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=mistral:instruct

# Vector Store (FAISS)
VECTOR_DB_PATH=./faiss_db
COLLECTION_NAME=pdf_documents

# Embeddings
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
CHUNK_SIZE=500
CHUNK_OVERLAP=50

# Server
HOST=0.0.0.0
PORT=8000
EOF